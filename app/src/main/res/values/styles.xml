<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <!--especifica um botão sem bordas-->

        <item name="android:radius">22dp</item>
        <item name="android:backgroundTint">@color/water_green</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="AppTheme.ToggleButton" parent="Base.Widget.AppCompat.Button">
        <!--especifica um botão sem bordas-->

        <item name="android:radius">22dp</item>
        <item name="android:backgroundTint">@color/water_green</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="AppTheme.DarkTextInput" parent="Widget.AppCompat.EditText">
        <!--especifica um botão sem bordas-->
        <item name="android:editTextColor">@color/dark_gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>

    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/water_green</item>
        <item name="colorPrimaryDark">@color/dark_water_green</item>
        <item name="colorAccent">@color/light_water_green</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>